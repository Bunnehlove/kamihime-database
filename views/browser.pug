                    include assets_browser/eidolons.pug
                #ssras(class='hidden' style='position: absolute;')
                    h2(style='text-align:left') SSRs (Awakened)
                    include assets_browser/ssras.pug
                #ssrs(class='hidden' style='position: absolute;')
                    h2(style='text-align:left') SSRs
                    include assets_browser/ssrs.pug
                #srs(class='hidden' style='position: absolute;')
                    h2(style='text-align:left') SRs
                    include assets_browser/srs.pug
                #rs(class='hidden' style='position: absolute;')
                    h2(style='text-align:left') Rs
                    include assets_browser/rs.pug